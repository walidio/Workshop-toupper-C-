<Window x:Class="WPF_workshopexo2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_workshopexo2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="50" Margin="80,69,0,0" TextWrapping="Wrap" Text="{Binding UserInput,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="170"/>
        <Button Content="Convert to Upper" HorizontalAlignment="Left" Margin="80,144,0,0" VerticalAlignment="Top" Command="{Binding ConvertCommand}"/>
        <TextBox HorizontalAlignment="Left" Margin="80,189,0,0" TextWrapping="Wrap" Text="{Binding Result}" VerticalAlignment="Top" Width="170" IsReadOnly="True"/>

    </Grid>
</Window>
